</head>

<body>

    <div id="login">

      <%= form_for(@tuple) do |f| %>
  <% if @tuple.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tuple.errors.count, "error") %> prohibited this tuple from being saved:</h2>

      <ul>
      <% @tuple.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


            <fieldset class="clearfix">

                <div>
                <p><div class="fontawesome-user"></div>
                  <%= f.collection_select :channel_id, Channel.all, :id, :name %>
                </p>
              </div>
                <!-- <br /><br /> -->
                <div>
                <p><div class="fontawesome-lock"></div>
                  <%= f.collection_select :trigger_id, Trigger.all, :id, :name %>
                </p>
                </div>
                <p><input type="submit" value="Sign In"></p>

            </fieldset>

<% end %>

        <p>Not a member? <a href="#">Sign up now</a><span class="fontawesome-arrow-right"></span></p>

    </div> <!-- end login -->

</body>
