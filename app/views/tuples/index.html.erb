<h1>Listing tuples</h1>

<table>
  <thead>
    <tr>
      <th>Channel</th>
      <th>Trigger</th>
      <th>Action</th>
      <th>Triggervalue</th>
      <th>Triggercondition</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>  
    <tr><td>&nbsp;</td></tr>
    <% @tuples.each do |tuple| %>
      <tr>
        <td><%= tuple.channel.name %></td>
        <td><%= tuple.trigger.name %></td>
        <td><%= tuple.action.name %></td>
        <td><%= tuple.triggerValue %></td>
        <td><%= tuple.triggerCondition %></td>
      
        <td><%= link_to 'Show', tuple %></td>
        <td><%= link_to 'Edit', edit_tuple_path(tuple) %></td>
        <td><%= link_to 'Destroy', tuple, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <tr><td>&nbsp;</td></tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tuple', new_tuple_path %>
